@model AspNetCoreMVC.Introduction.Models.Security.ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
</head>
<body>
    <h3>Reset Password</h3>
    <form asp-controller="Security" asp-action="ResetPassword" method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="Code" type="hidden" />
        <input asp-for="Email" type="text" placeholder="Email" /><br />
        <input asp-for="Password" type="password" placeholder="Password" /><br />
        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" /><br />
        <input type="submit" placeholder="Reset" /><br />
    </form>
</body>
</html>
